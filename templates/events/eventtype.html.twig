{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-5 mb-5" style="margin: 0 auto;">
<h1 class="page-header mb-5"> Coming events </h1>
    <div class="row">
    {% for eventtypes in eventtype %}
    <div class="card col-lg-4 col-md-6 col-sm-12 p-0 mb-3 me-4" style="width: 30rem;">
        <img src="{{eventtypes.image}}" class="card-img-top img-fluid" alt="{{eventtypes.image}}">

        <div class="card-body">
        <h5 class="card-title">{{eventtypes.name}}</h5>
        <p class="card-text">Date: {{eventtypes.time|date()}}</p>
        </div>

        <ul class="list-group list-group-flush">
        <li class="list-group-item">{{eventtypes.description}}</li>
        <li class="list-group-item">Capacity: {{eventtypes.capacity}} people</li>
        <li class="list-group-item">Contact us: {{eventtypes.email}}</li>
        <li class="list-group-item">Mobile: {{eventtypes.phone}}</li>
        <li class="list-group-item">Address: {{eventtypes.address}}</li>
        <li class="list-group-item"><a href="{{eventtypes.url}}" class="btn btn-secondary">Visit Website</a></li>
        </ul>

        </div>
    {% endfor %}
    <br>
    <div>
    <a class="btn btn-success btn-lg ms-1" href="/">Back to home</a>
    </div>
</div>
</div>
{% endblock %}